{
  "name": "openstaff",
  "version": "1.0.6",
  "description": "Manage multiple AI coding agents running 24/7",
  "type": "module",
  "main": "./out/main/index.js",
  "author": "Persly",
  "license": "MIT",
  "homepage": "https://github.com/koreanthinker/openstaff",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "pnpm build && electron-builder --dir",
    "build:mac": "pnpm build && electron-builder --mac",
    "build:linux": "pnpm build && electron-builder --linux",
    "lint": "eslint src/",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "OPENSTAFF_E2E_SHOW_WINDOW=0 pnpm build && playwright test",
    "test:e2e:headed": "OPENSTAFF_E2E_SHOW_WINDOW=1 pnpm build && playwright test --headed",
    "test:e2e:ui": "OPENSTAFF_E2E_SHOW_WINDOW=1 pnpm build && playwright test --ui"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-label": "^2.1.8",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-progress": "^1.1.8",
    "@radix-ui/react-scroll-area": "^1.2.10",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.8",
    "@radix-ui/react-slot": "^1.2.4",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@tanstack/react-query": "^5.62.0",
    "electron-store": "^10.0.0",
    "electron-updater": "^6.3.0",
    "express": "^4.21.0",
    "lucide-react": "^0.468.0",
    "node-pty": "^1.0.0",
    "pidusage": "^3.0.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-markdown": "^9.0.1",
    "react-router-dom": "^6.28.0",
    "recharts": "^2.14.1",
    "socket.io": "^4.8.0",
    "socket.io-client": "^4.8.0",
    "tree-kill": "^1.2.2",
    "uuid": "^11.0.3",
    "zustand": "^5.0.0"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-ts": "^3.0.0",
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@electron-toolkit/utils": "^3.0.0",
    "@eslint/js": "^10.0.1",
    "@playwright/test": "^1.49.0",
    "@types/express": "^5.0.0",
    "@types/node": "^22.9.0",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^4.3.0",
    "@vitest/coverage-v8": "^2.1.0",
    "autoprefixer": "^10.4.20",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "electron": "^35.7.5",
    "electron-builder": "^25.1.0",
    "electron-vite": "^2.3.0",
    "eslint": "^9.14.0",
    "jsdom": "^25.0.0",
    "postcss": "^8.4.49",
    "tailwind-merge": "^2.6.0",
    "tailwindcss": "^3.4.15",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.6.0",
    "typescript-eslint": "^8.56.0",
    "vite": "^5.4.0",
    "vitest": "^2.1.0"
  },
  "pnpm": {
    "overrides": {
      "tar": ">=7.5.8",
      "minimatch": ">=10.2.1",
      "esbuild": ">=0.25.0"
    }
  }
}
